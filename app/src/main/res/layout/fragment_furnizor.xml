<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.FurnizorFragment"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/f1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Nume companie:" />

    <TextView
        android:id="@+id/f2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/f1"
        android:layout_below="@+id/f1"
        android:layout_marginTop="15dp"
        android:text="Cod inregistrare:" />

    <TextView
        android:id="@+id/f3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/f2"
        android:layout_below="@+id/f2"
        android:layout_marginTop="15dp"
        android:text="Cod fiscal:" />

    <TextView
        android:id="@+id/f4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/f3"
        android:layout_below="@+id/f3"
        android:layout_marginTop="15dp"
        android:text="Banca:" />

    <TextView
        android:id="@+id/f5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/f4"
        android:layout_below="@+id/f4"
        android:layout_marginTop="15dp"
        android:text="Cod IBAN:" />

    <TextView
        android:id="@+id/f6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/f5"
        android:layout_below="@+id/f5"
        android:layout_marginTop="15dp"
        android:text="Adresa:" />


    <TextView
        android:id="@+id/numComp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="30dp"
        android:text="Nume companie" />

    <TextView
        android:id="@+id/codIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/numComp"
        android:layout_below="@+id/numComp"
        android:layout_marginTop="15dp"
        android:text="Cod Inregistrare" />

    <TextView
        android:id="@+id/codFis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/codIn"
        android:layout_below="@+id/codIn"
        android:layout_marginTop="15dp"
        android:text="Cod Fiscal" />

    <TextView
        android:id="@+id/banca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/codFis"
        android:layout_below="@+id/codFis"
        android:layout_marginTop="15dp"
        android:text="Banca" />

    <TextView
        android:id="@+id/codIBAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/banca"
        android:layout_below="@+id/banca"
        android:layout_marginTop="15dp"
        android:text="Cod IBAN" />

    <TextView
        android:id="@+id/adresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/f6"
        android:layout_below="@+id/f6"
        android:layout_marginTop="15dp"
        android:text="Adresa" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="sendMessage"
        android:text="Client" />


</RelativeLayout>
