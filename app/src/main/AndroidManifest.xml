<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.intern.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeMarsala">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <fragment android:name=".FacturiActivity" android:parentActivityName="com.example.intern.myapplication.StatusActivity" android:launchMode="singleTop"/>

        <fragment android:name=".FacturaDetailsActivity" android:parentActivityName="com.example.intern.myapplication.FacturiActivity" android:launchMode="singleTop"/>

        <fragment
            android:name=".DetailsActivity"
            android:label="@string/title_activity_details" />
        <fragment android:name=".SettingsActivity"  android:parentActivityName="com.example.intern.myapplication.MainActivity" android:launchMode="singleTop"/>
        <fragment android:name=".LoginActivity" android:parentActivityName="com.example.intern.myapplication.MainActivity" android:launchMode="singleTop" ></fragment>
        <fragment android:name=".UtilizatoriActivity" android:parentActivityName="com.example.intern.myapplication.MainActivity" android:launchMode="singleTop"/>
        <fragment android:name=".ThemeSettingsActivity" />
        <fragment android:name=".StatusActivity" android:parentActivityName="com.example.intern.myapplication.MainActivity" android:launchMode="singleTop"/>
        <fragment android:name=".ClientActivity" />
    </application>

</manifest>